<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/favourite_list_item_height"
    android:layout_margin="@dimen/card_margin"
    app:elevation="@dimen/elevation_medium">


    <RelativeLayout
        android:id="@+id/reward_header_top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="5dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/list_user_img"
            android:layout_width="@dimen/item_avatar_size"
            android:layout_height="@dimen/item_avatar_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            fresco:placeholderImage="@drawable/user_profile"
            fresco:roundAsCircle="true"/>

        <RelativeLayout
            android:id="@+id/reward_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/list_user_img"
            android:layout_toEndOf="@+id/list_user_img"
            android:gravity="end">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:gravity="right|end"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <TextView
                        android:id="@+id/title_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4.0dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="start"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:text="Here willl be the title of the post"
                        android:textColor="@color/login_bg_color"
                        android:textSize="@dimen/font_medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:gravity="start|center_vertical"
                     >
                   <!-- <RatingBar
                        android:id="@+id/post_list_ratingvalues"
                        style="@style/StarRatingBarSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="17dip" />-->
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="username"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:textColor="@color/login_bg_color"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/timestamp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="username"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/login_bg_color"
                        android:textSize="@dimen/font_small" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:gravity="start|center_vertical"
                    >
                    <!-- <RatingBar
                         android:id="@+id/post_list_ratingvalues"
                         style="@style/StarRatingBarSmall"
                         android:layout_width="wrap_content"
                         android:layout_height="17dip" />-->
                    <TextView
                        android:id="@+id/reputation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="rep"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:textColor="@color/login_bg_color"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/answercount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="answercount"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/login_bg_color"
                        android:textSize="@dimen/font_small" />

                    <Button
                        android:id="@+id/tag"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tag"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:textColor="@color/login_bg_color"
                        android:textSize="@dimen/font_small" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>